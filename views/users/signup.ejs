<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h3 class="col-6 offset-3">Signup on wanderlust3</h3>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username " class="form-lable">Username</label>
                <input class="form-control" type="text" name="username" placeholder="Enter name" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email " class="form-lable">Email</label>
                <input class="form-control" type="email" name="email" placeholder="Enter name" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="password " class="form-lable">password</label>
                <input class="form-control" type="password" name="password" placeholder="Enter password" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>