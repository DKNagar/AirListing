<% layout("/layouts/boilerplate") %>
<body>
    <h3>create new listing</h3>
    <div class="row">
    <div class="col-8 offset-2">
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input class="form-control" type="text" name="listing[title]" placeholder="Enter name" required>
            <div class="valid-feedback">Looks good!</div>
        </div>
        
        <div>
            <label for="description" class="form-lable" > description</label>
            <textarea class="form-control" name="listing[description]" id="" cols="30" rows="3" required></textarea>
        </div>
        
        <div>
            <label for="image" class="form-lable" >Upload Image</label>
            <input class="form-control" type="file" name="listing[image]" id="image" required> 
        </div>
       
             
        <div>
            <label for="price" class="form-lable" >Price</label>
            <input class="form-control" type="number" name="listing[price]" placeholder="Enter price" required>
            <div class="invalid-feedback">price not valid</div>
        </div>
        <div>
            <label for="location" class="form-lable">Location</label>
            <input class="form-control" type="text" name="listing[location]" placeholder="Enter location" required>
            <div class="invalid-feedback">location should b valid</div>
        </div>
        
        <div class="mb-3">
            <label for="country" class="form-lable">Country</label>
            <input class="form-control" type="text" name="listing[country]" placeholder="Enter country name" required> 
            <div class="invalid-feedback">please entry country name</div>
        </div>
        <br>
        <button class="add-btn">Add</button>
    </form>    
</body>
</html>