<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    
    <h3>Edit listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input class="form-control" type="text" name="listing[title]" value="<%= listing.title %>" required>
            <div class="valid-feedback">Looks good!</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-lable" > description</label>
            <textarea class="form-control" name="listing[description]" id="" cols="30" rows="3"><%= listing.description %></textarea>
        </div>

        <div class="card col-6 offset-2" >
            Original Image
            <img src="<%= originalImageUrl %>" class="card-img-top show-img" alt="listing_image">
        </div>

        <div class="mb-3">
            <label for="image" class="form-lable" >Upload New Image</label>
            <input class="form-control" type="file" name="listing[image]"> 
        </div>

        <div class="row">  
        <div class="mb-3 col-md-4">
            <label for="price" class="form-lable" >Price</label>
            <input class="form-control" type="number" name="listing[price]" value="<%= listing.price %>" required>
            <div class="invalid-feedback">price not valid</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="location" class="form-lable">Location</label>
            <input class="form-control" type="text" name="listing[location]" value="<%= listing.location %>" required    >
            <div class="invalid-feedback">location should b valid</div>
        </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-lable">Country</label>
            <input class="form-control" type="text" name="listing[country]" value="<%= listing.country %>" required> 
            <div class="invalid-feedback">please entry country name</div>
        </div>
        <button class="add-btn">Edit</button>
    </form>

</div>
</div>

</body>
